{
    "manifest_version": 3,
    "name": "POE Extension",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.pathofexile.com/*"
    ],
    "action": {
      "default_popup": "js/index.html"
    },
    "background": {
      "service_worker": "js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.pathofexile.com/*"],
        "js": ["js/content.js"]
      }
    ]
  }